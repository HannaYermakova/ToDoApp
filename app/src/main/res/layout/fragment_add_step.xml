<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="by.aermakova.todoapp.ui.step.addNew.AddStepViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.goal.addNew.AddGoalFragment">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:elevation="@dimen/elevation_button"
            app:backgroundTint="@color/color_blue"
            app:fabSize="mini"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:onClick="@{viewModel.popBack}"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/title"
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_step_title"
            app:layout_constraintBottom_toBottomOf="@+id/fab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fab" />

        <EditText
            android:id="@+id/step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_normal"
            android:hint="@string/enter_step_hint"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="5"
            android:theme="@style/CustomEditTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:tempTitle="@{viewModel.tempStepTitle}" />

        <TextView
            android:id="@+id/attach_to_goal_text"
            style="@style/TextInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/step_attach_to_goal_text"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/step_title" />

        <ViewSwitcher
            android:id="@+id/goal_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/attach_to_goal_text"
            app:showView="@{viewModel.keyResultIsVisible}">

            <Button
                android:id="@+id/attach_to_goal_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_button_bg"
                android:elevation="@dimen/elevation_button"
                android:text="@string/select"
                android:textColor="@color/color_grey_light"
                app:addTitle="@{@string/select_goal_text}"
                app:openDialog="@{viewModel.selectGoal}" />

            <TextView
                android:id="@+id/attached_goal_title"
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{viewModel.goalTitle}"
                tools:text="Goal Title" />

        </ViewSwitcher>

        <TextView
            android:id="@+id/attach_to_key_result_text"
            style="@style/TextInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/step_attach_to_key_result_text"
            android:textAlignment="textStart"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_switcher"
            app:visible="@{viewModel.keyResultIsVisible}"
            tools:visibility="visible" />

        <ViewSwitcher
            android:id="@+id/key_result_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/attach_to_key_result_text"
            app:showView="@{viewModel.stepsIsVisible}"
            app:visible="@{viewModel.keyResultIsVisible}"
            tools:visibility="visible">

            <Button
                android:id="@+id/attach_to_key_result_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_button_bg"
                android:elevation="@dimen/elevation_button"
                android:text="@string/select"
                android:textColor="@color/color_grey_light"
                app:addTitle="@{@string/select_key_result_text}"
                app:openDialog="@{viewModel.selectKeyResult}" />

            <TextView
                android:id="@+id/attached_key_result_title"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{viewModel.keyResultTitle}"
                tools:text="Key Result Title" />
        </ViewSwitcher>

        <Button
            android:id="@+id/save_button"
            style="@style/AccentButtonStyle"
            android:layout_marginBottom="@dimen/margin_normal"
            android:elevation="@dimen/elevation_button"
            android:text="@string/save_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:onClick="@{viewModel.saveStep}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>