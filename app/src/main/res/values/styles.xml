<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/color_ripple</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="FullHeightDialog" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="DoneMarkerStyle">
        <item name="android:layout_width">@dimen/toggle_size</item>
        <item name="android:layout_height">@dimen/toggle_size</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/empty</item>
        <item name="android:textOff">@string/empty</item>
        <item name="android:textOn">@string/empty</item>
    </style>

    <style name="CustomProgressBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:indeterminateDrawable">@drawable/spinner_ring</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CustomEditTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/color_scheme_outer_space</item>
        <item name="colorControlActivated">@color/color_scheme_salt_box</item>
        <item name="colorControlHighlight">@color/color_scheme_salt_box</item>
        <item name="android:fontFamily">@font/proxima_nova_font</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="AccentButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/accent_button_bg</item>
    </style>

    <style name="AccentButtonStyleBackground">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/accent_button_bg</item>
    </style>

    <style name="RegularButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/color_scheme_outer_space</item>
        <item name="android:background">@drawable/regular_button_bg</item>
    </style>

    <style name="RegularButtonStyleBackground">
        <item name="android:textColor">@color/color_scheme_outer_space</item>
        <item name="android:background">@drawable/regular_button_bg</item>
    </style>

    <style name="CustomTextStyle">
        <item name="android:fontFamily">@font/proxima_nova_font</item>
    </style>

    <style name="TextRegular" parent="CustomTextStyle">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/color_grey</item>
    </style>

    <style name="CustomFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="srcCompat">@drawable/ic_baseline_add_24</item>
        <item name="backgroundTint">@color/color_scheme_brick</item>
    </style>

    <style name="CustomRadioButtonStyle" parent="TextRegular">
        <item name="android:background">@null</item>
        <item name="android:button">@drawable/radio_button_bg</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextInstructions" parent="CustomTextStyle">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/color_scheme_outer_space</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/color_scheme_salt_box</item>
        <item name="android:fontFamily">@font/proxima_nova_thin</item>
    </style>

    <style name="TextGoalTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="TextAccent">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/color_scheme_driftwood</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/color_scheme_shark</item>
        <item name="android:fontFamily">@font/proxima_nova_font</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/color_scheme_brick</item>
        <item name="android:fontFamily">@font/proxima_nova_font</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Holo.Light.DropDownItem">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="CustomImageButton">
        <item name="android:layout_width">@dimen/image_button_size</item>
        <item name="android:layout_height">@dimen/image_button_size</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:background">@drawable/back_button_background</item>
    </style>

    <style name="CustomEditButton" parent="CustomImageButton">
        <item name="srcCompat">@drawable/ic_baseline_edit_24</item>
    </style>

    <style name="CustomSaveButton" parent="CustomImageButton">
        <item name="srcCompat">@drawable/ic_baseline_done_24</item>
    </style>

    <style name="CustomBackButton" parent="CustomImageButton">
        <item name="srcCompat">@drawable/ic_baseline_arrow_back_24</item>
    </style>

</resources>